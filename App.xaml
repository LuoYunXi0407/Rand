<Application
    x:Class="rand7.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    DispatcherUnhandledException="OnDispatcherUnhandledException"
    Exit="OnExit"
    Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    <JumpList.JumpList>
        <JumpList ShowRecentCategory="True" ShowFrequentCategory="True">
            <JumpTask Title="官方网站" Description="打开官方网站" ApplicationPath="https://github.com/LuoYunXi0407/Rand" />
            <JumpTask Title="使用文档" Description="打开使用文档" ApplicationPath="https://github.com/LuoYunXi0407/Rand" />

            <JumpTask Title="Bug 反馈" Description="反馈 Bug" ApplicationPath="https://github.com/LuoYunXi0407/Rand/issues" />

        </JumpList>
    </JumpList.JumpList>
</Application>
